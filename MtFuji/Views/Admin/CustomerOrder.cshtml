
@{
    ViewBag.Title = "CustomerOrder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int number = 1;
}
@model MtFuji.Models.CustomerOrder

@{
    if (ViewBag.OrderList != null)
    {<ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Customer's Order List</li>
    </ol>
   

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Customer Order Table
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Customer Name</th>
                            <th>Phone</th>
                            <th>Phone 2</th>
                            <th>Address</th>
                            <th>Payment Type</th>
                            <th>Ordered Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in ViewBag.OrderList)
                        {
                            <tr>
                                <td>@number</td>
                                <td>@order.CustomerName</td>
                                <td>@order.CustomerPhone</td>
                                <td>@order.Phone2</td>
                                <td>@order.CustomerAddress</td>
                                <td>@order.PaymentType</td>
                                <td>@order.OrderDate</td>
                                <td style="text-align:center"><a href="@Url.Action(controllerName: "Admin", actionName: "OrderDetail", routeValues: new { id = @order.OrderID })" class=" details"><i class="fas fa-fw fa-eye"></i></a></td>
                            </tr>
                            number++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    }
    else
    {
        if (Model != null)
        {<ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Customer's Order Detail</li>
        </ol>
        <div class="card mb-3">
            <div class="card-header">
                <form>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    @Html.TextBoxFor(model => model.CustomerPhone, new { @class = "form-control" })

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextAreaFor(model => model.CustomerAddress, new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    @Html.TextBoxFor(model => model.Phone2, new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    @Html.TextBoxFor(model => model.OrderDate, new { @class = "form-control" })

                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Product Name</th>
                                <th>Product Image</th>
                                <th>Quantity</th>
                                <th>Prices</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.OrderDetails)
                            {
                                <tr>
                                    <td>@number</td>
                                    <td>@order.Product.product_name</td>
                                    <td><img src='@Url.Content(order.Product.img1)' alt="" style="height:90px;width:90px; "></td>
                                    <td>@order.Quantity</td>
                                    <td>@order.Price</td>
                                </tr>
                                number++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        }
    }
}

@{

}

