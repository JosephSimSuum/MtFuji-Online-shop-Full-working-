            <i class="fas fa-bars"></i>
        </button>
        </nav>
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Admin/DashBoard/">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            @*<li class="nav-item">
                <a class="nav-link" href="charts.html">
